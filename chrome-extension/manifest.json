{
  "manifest_version": 3,
  "name": "Hindi Email Assistant",
  "version": "1.0",
  "description": "Speak in Hindi and generate professional English emails.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
